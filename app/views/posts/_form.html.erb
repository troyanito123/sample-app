<div class="row">
  <div class="col-12 col-md-10 col-lg-8 mx-auto px-3 pt-3 pb-4 bg-white shadow">
    <h1 class="text-center text-primary"> <%= title %> </h1>
    <hr>
    <%= form_for @post do |f| %>
      <div class="form-group">
        <%= f.label 'Title:', class: 'text-primary' %>
        <%= f.text_field :title, class: 'form-control border-0 bg-light shadow-sm' %>
        <small class="text-danger">
          <%= @post.errors.messages[:title].first %>
        </small>
      </div>
      <div class="form-group">
        <%= f.label 'Body:', class: 'text-primary' %>
        <%= f.text_area :body, class: 'form-control border-0 bg-light shadow-sm' %>
        <small class="text-danger">
          <%= @post.errors.messages[:body].first %>
        </small>
      </div>

      <div class="form-group">
        <%= f.label 'Images' %> <br>
        <%= f.file_field :images, multiple: true %> <br>
        <small class="text-danger">
          <%= @post.errors[:images].first %>
        </small>
      </div>

      <%= f.submit btnTxt, class: 'btn btn-primary btn-block' %>
      <%= link_to "Cancel", posts_path,class: 'btn btn-secondary btn-block' %>
    <% end %>
  </div>
</div>